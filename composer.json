{
	"name" : "webtak/wordpress",
	"type" : "project",
	"license" : "MIT",
	"description" : "WordPress boilerplate ",
	"homepage" : "https://www.webtak.nl",
	"authors" : [{
			"name" : "Hans Kellerhuis",
			"email" : "webtak@gmail.com",
			"homepage" : "https://github.com/webtakwebtak"
		}
	],
	"keywords" : [
		"composer",
		"wordpress",
		"webtak"
	],
	"config" : {
		"secure-http" : false
	},
	"repositories" : [{
			"type" : "composer",
			"url" : "http://wpackagist.org"
		}
	],
	"require" : {
		"php" : ">=7.3",
		"vlucas/phpdotenv" : "^3.0.0",
		"johnpbloch/wordpress" : "5.1.0",
		"wpackagist-plugin/advanced-custom-fields" : "*",
		"webtak/cleanup-wp" : "*",
		"webtak/wp-theme" : "*"
	},
	"extra" : {
		"installer-paths" : {
			"web/app/mu-plugins/{$name}/" : [
				"type:wordpress-muplugin"
			],
			"web/app/plugins/{$name}/" : [
				"type:wordpress-plugin"
			],
			"web/app/themes/{$name}/" : [
				"type:wordpress-theme"
			]
		},
		"wordpress-install-dir" : "web/wp"
	},
	"scripts" : {
		"post-update-cmd" : [
			"Webtak\\CleanupWP\\Test::onPostInstallCmd"
		],
		"post-dependencies-solving" : "php -r \"copy('.env.example', '.env');\""	
},

	"minimum-stability" : "dev"
}
